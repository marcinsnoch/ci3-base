{% extends "layouts/auth.twig" %}

{% block title %}Register{% endblock %}

{% block content %}
<div class="register-box">
    <div class="login-logo">
        {{ config.item('app_name') }}
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
        {{ form_open() }}
            <div class="form-group has-feedback{{ form_error('full_name') ? ' has-error'}}">
                <input type="text" name="full_name" class="form-control" value="{{ set_value('full_name') }}" placeholder="Full name">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                {{ form_error('full_name') }}
            </div>
            <div class="form-group has-feedback{{ form_error('email') ? ' has-error'}}">
                <input type="email" name="email" class="form-control" value="{{ set_value('email') }}" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                {{ form_error('email') }}
            </div>
            <div class="form-group has-feedback{{ form_error('password') ? ' has-error'}}">
                <input type="password" name="password" class="form-control" placeholder="Password" value="password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                {{ form_error('password') }}
            </div>
            <div class="form-group has-feedback{{ form_error('passconf') ? ' has-error'}}">
                <input type="text" name="passconf" class="form-control" placeholder="Retype password" value="password">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                {{ form_error('passconf') }}
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" name="register" class="btn btn-primary btn-block btn-flat" value="true">
                        Register
                    </button>
                </div>
            </div>
        {{ form_close() }}
        <a href="{{ site_url('login') }}" class="text-center">I already have a membership</a>
    </div>
</div>
{% endblock %}
{% block scripts %}
{{ parent() }}
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' /* optional */
        });
    });
</script>
{% endblock %}