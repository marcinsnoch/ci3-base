            </div>
            <div class="box-footer">
                <a href="#" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </section>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script src="{{ base_url('plugins/ekko-lightbox/ekko-lightbox.min.js') }}"></script>
    <script src="{{ base_url('plugins/bootstrap-3-typeahead/bootstrap3-typeahead.min.js') }}"></script>
    <script src="{{ base_url('plugins/moment/moment-with-locales.min.js') }}"></script>
    <script src="{{ base_url('plugins/eonasdan-bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ base_url('plugins/bootstrap-table/bootstrap-table.min.js') }}"></script>
    <script src="{{ base_url('plugins/bootstrap-table/bootstrap-table-locale-all.min.js') }}"></script>
