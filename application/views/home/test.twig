        <h1>Page title <small>sub title</small></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Home</a> </li>
            <li><a href="#">Page</a></li>
            <li class="active">Sub page</li>
        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Title</h3>
                <div class="box-tools pull-right">
                    <div class="btn-group">
                        <a href="#" class="btn btn-box-tool" target="_blank" title="Print"><i class="fa fa-print"></i></a>
                        <a href="#" class="btn btn-box-tool" title="Download PDF"><i class="fa fa-download"></i></a>
                        <button type="button" class="btn btn-box-tool dropdown-toggle" data-toggle="dropdown" title="Menu">
                            <i class="fa fa-bars"></i> Menu
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#"><i class="fa fa-edit"></i> Edit</a></li>
                            <li><a href="#"><span class="text-danger"><i class="fa fa-trash"></i> Delete</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="box-body">
