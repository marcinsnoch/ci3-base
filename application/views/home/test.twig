{% extends "layouts/application.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <link href="{{ base_url('plugins/bootstrap-table/bootstrap-table.min.css') }}" rel="stylesheet">
    <link href="{{ base_url('plugins/bootstrap-table/extensions/sticky-header/bootstrap-table-sticky-header.css') }}" rel="stylesheet">
    <link href="{{ base_url('plugins/eonasdan-bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
    <link href="{{ base_url('plugins/icheck/skins/square/_all.css') }}" rel="stylesheet">
    <link href="{{ base_url('plugins/ekko-lightbox/ekko-lightbox.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
