<!DOCTYPE html>
<html lang="en">

    <head>
        {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
        <link href="{{ base_url('plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ base_url('plugins/admin-lte/css/AdminLTE.min.css') }}" rel="stylesheet">
        <link href="{{ base_url('plugins/admin-lte/css/skins/skin-blue.min.css') }}" rel="stylesheet">
        <link href="{{ base_url('plugins/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ base_url('css/styles.min.css') }}" rel="stylesheet">
        <title>{% block title %}{% endblock %}</title>
        {% endblock %}
    </head>

    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            <!-- Main Header -->
            <header class="main-header">
                <a href="/" class="logo">
                    <span class="logo-mini">Test APP</span>
                    <span class="logo-lg">TA</span>
                </a>
                <nav class="navbar navbar-static-top" role="navigation">
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <li class="dropdown notifications-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-bell-o"></i>
                                    <span id="notification_nums" class="label label-default">0</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="header text-center"><b><span id="notification_nums2">0</span></b>
                                        {{ lang('Unread_notifications') }}
                                    </li>
                                    <li class="footer">
                                        <a href="View all"></a>
                                    </li>
                                </ul>
                            </li>
                            <li class="dropdown notifications-menu">
                                <a href="#">
                                    <i class="fa fa-shopping-basket"></i>
                                    <span class="label label-default">0</span>
                                </a>
                            </li>
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="{{ base_url('img/no-photo.jpg') }}" class="user-image" alt="User photo">
                                    <span class="hidden-xs">{{ session.full_name }}</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-header">
                                        <img src="{{ base_url('img/no-photo.jpg') }}" class="user-circle" alt="User photo">
                                        <p>{{ session.full_name }} <small>Administrator</small></p>
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="{{ site_url('/') }}" class="btn btn-default"><i class="fa fa-user"></i> {{ lang('My_account') }}</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="{{ site_url('logout') }}" class="btn btn-default"><i class="fa fa-sign-out"></i> {{ lang('Sign_out') }}</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <aside class="main-sidebar">
                <section class="sidebar">
                    {{ form_open('search', 'method="get" class="sidebar-form"') }}
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="{{ lang('Search') }}...">
                        <span class="input-group-btn">
                            <button type="submit" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    {{ form_close() }}
                    <ul class="sidebar-menu">
                        <li class="header">{{ lang('MAIN_MENU') }}</li>
                        <li><a href="{{ site_url('/') }}"><i class="fa fa-home fa-fw"></i> <span>{{ lang('Home') }}</span></a></li>
                        <li><a href="{{ site_url('/') }}"><i class="fa fa-shopping-basket fa-fw"></i> <span>{{ lang('Products') }}</span></a></li>
                        <li><a href="{{ site_url('/') }}"><i class="fa fa-shopping-cart fa-fw"></i> <span>{{ lang('Orders') }}</span></a></li>
                        <li class="header">{{ lang('DISTRIBUTION_CENTER') }}</li>
                        <li><a href="{{ site_url('/') }}"><i class="fa fa-truck fa-fw"></i> <span>{{ lang('Deliveries') }}</span></a></li>
                        <li><a href="{{ site_url('/') }}"><i class="fa fa-plane fa-fw"></i> <span>{{ lang('Shipments') }}</span></a></li>
                        <li class="header">{{ lang('OTHER_MENU') }}</li>
                        <li><a href="{{ site_url('/users') }}"><i class="fa fa-users fa-fw"></i> <span>{{ lang('Users') }}</span></a></li>
                    </ul>
                </section>
            </aside>
            <div class="content-wrapper">{% block content %}{% endblock %}</div>
            <footer class="main-footer">
                <div class="pull-right hidden-xs">
                    Created by <a href="mailto:">MSX</a>
                </div>
                <strong>Copyright &copy; {{ "now"|date('Y') }} </strong> All rights reserved.
            </footer>
        </div>
        {% block scripts %}
        <script src="{{ base_url('plugins/jquery/jquery.min.js') }}"></script>
        <script src="{{ base_url('plugins/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ base_url('plugins/admin-lte/js/adminlte.min.js') }}"></script>
        <script src="{{ base_url('plugins/bootstrap-notify/bootstrap-notify.min.js') }}"></script>
        <script src="{{ base_url('js/application.min.js') }}"></script>
        {% set alert = session.flashdata('alert') %}
        {% if alert %}
        <script>
            $.notify({
                message: '{{ alert.msg }}'
            }, {
                type: '{{ alert.type }}',
                placement: { align: 'center' }
            });
        </script>
        {% endif %}
        {% endblock %}
    </body>

</html>